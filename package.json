{
  "name": "template-nestjs",
  "version": "1.0.0",
  "description": "Boilerplate for serverless services based on NestJS",
  "author": {
    "name": "Gorila - Product Back-End",
    "email": "pbe@gorila.com.br"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/gorilainvest/template-nestjs"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install .config/husky",
    "build": "nest build",
    "dev": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./source/main.ts",
    "start": "node ./source/main.js || (cd dist && node ./source/main.js)",
    "docker": "pnpm run build && docker build -t template-nestjs dist && docker run --rm -it -p 8080:8080 template-nestjs",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --testTimeout=30000 --config .config/jest/.jestrc.json"
  },
  "dependencies": {
    "@gorila-bot/nestjs-core": "5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@gorila-bot/eslint-config-gorila-ts": "1.1.0",
    "@nestjs/cli": "8.2.2",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "commitlint": "16.2.1",
    "eslint": "8.10.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.5",
    "ts-jest": "27.1.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.2"
  }
}
